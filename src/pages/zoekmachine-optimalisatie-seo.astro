      },
      {
        title: 'Strategie',
        icon: 'tabler:number-4',
      },
      {
        title: 'Implementatie en Uitvoering',
        icon: 'tabler:number-5',
      },
      {
        title: 'Monitoring en Optimalisatie',
        icon: 'tabler:number-6',
      },
    ]}
    image={{
      src: 'src/assets/images/zoekmachine-optimalisatie-seo-proces.jpg',
      alt: 'Zoekmachine optimalisatie seo proces',
    }}
  />

