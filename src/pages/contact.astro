---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Magick Media - Contact',
  description:'Kom in contact met Magick Media en ontdek hoe wij je kunnen begeleiden naar online succes met onze deskundige service.',
  ignoreTitleTemplate: true,
  robots: {
    index: false,
    follow: true,
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Neem contact met ons op!" />

  <ContactUs
    title="Wij reageren vaak nog dezelfde werkdag!"
    subtitle="Voor snelle antwoorden kun je natuurlijk altijd in onze FAQs kijken. Heb je interesse in een dienst, wil je een offerte aanvragen of heb je andere vragen? Laat hier onder dan een bericht achter. We nemen zo snel mogelijk contact met je op!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Naam',
        placeholder:"Mick Vranken",
      },
      {
        type: 'text',
        name: 'email',
        label: 'Email',
        placeholder:"mick@magickmedia.nl",
      },
      {
        type: 'number',
        name: 'telefoon',
        label: 'Telefoon',
        placeholder:"0612345678",
      },
    ]}
    textarea={{
      label: 'Bericht',
      placeholder:'Typ hier je bericht...'
    }}
    disclaimer={{
      label:
        'Door dit contact formulier in te vullen, ga ik ermee akkoord dat bovenstaande persoonsgegevens worden verzameld.',
    }}
    description="Wij streven erna om binnen 1 werkdag te reageren."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Hoe je ons nog meer kunt bereiken!"
    items={[
      {
        title: 'Telefoon',
        description: '+316 42 66 79 70',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@magickmedia.nl',
        icon: 'tabler:mail',
      },
      {
        title: 'Adres',
        description: 'Willy den oudenstraat 121, 5026 DB Tilburg',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
