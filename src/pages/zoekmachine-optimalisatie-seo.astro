---
import Layout from '~/layouts/PageLayout.astro';
import Prices3 from '~/components/widgets/Pricing3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Magick Media - Zoekmachine Optimalisatie (SEO).',
};
---

<Layout metadata={metadata}>

  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Zoekmachine Optimalisatie (SEO)"
    actions={[
      {
        variant: 'primary',
        text: 'Interesse',
        href: '/contact',
      },
      { text: 'Tarieven', href: '#tarieven' },
    ]}
  >
    <Fragment slot="title">
      Hogerop in Google? Laat je zoekmachine optimalisatie (SEO) regelen door <span class='text-accent dark:text-white highlight'> Magick Media</span>!
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        Wij weten hoe belangrijk het is dat je goed gevonden wordt in Google. Wij doen er alles aan om de vindbaarheid van jouw website of webshop te verhogen!
      </span>
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    title="De voordelen van Zoekmachine Optimalisatie (SEO) bij Magick Media."
    subtitle="Waarom zou je eigenlijk voor deze dienstverlening kiezen? Wij leggen je uit waarom SEO belangrijk is."
    columns={2}
    items={[
      {
        title: 'Gebruiksvriendelijk',
        description: 'Een belangrijk aspect van SEO is de gebruiksvriendelijkheid van je website. Google weegt dit zwaar mee om de positie in de zoekresultaten te bepalen. Denk hierbij aan de snelheid van je pagina en hoe makkelijk je kunt vinden wat je zoekt.',
        icon: 'tabler:mood-smile-beam',
      },
      {
        title: 'Lange termijn resultaten',
        description: 'SEO zet je in voor de lange termijn. Hoewel het zo maar 6 maanden kan duren voordat je resultaat begint te merken, heb je er daarna ook voor lange periode voordeel van.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Maandelijkse rapportages',
        description: 'We houden je graag op de hoogte van de voortgang. Zoals hierboven vermeldt is het een investering voor de lange termijn, maar we nemen je graag mee hoe je er online voor staat.',
        icon: 'tabler:chart-pie',
      },
      {
        title: 'Lage kosten',
        description: 'De kosten voor SEO zijn relatief laag, in vergelijking met bijvoorbeeld Google Adverteren (SEA)',
        icon: 'tabler:coin-euro',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />
  
  
  <!-- Pricing2 Widget ******************* -->

  <Prices3
    title="Tarieven"
    subtitle="Kies een pakket die bij jou past"
    id="tarieven"
    prices={[
      {
        title: 'Strategie',
        subtitle: 'Een plan van aanpak hoe je het beste goed gevonden gaat worden in Google',
        price: 499,
        period: 'eenmalig',
        items: [
          { 
            description: 'Rapportage van huidige website',
          }, 
          {
            description: 'Zoekwoorden onderzoek',
          },
          {
            description: 'High value zoekwoorden bepalen',
          },
          {
            description: "Presentatie van de strategie",
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Interesse',
          href: '/contact',
        },
      },
      {
        title: 'Implementatie',
        subtitle: 'De strategie die we hebben ontwikkeld, wordt geÃ¯mplementeerd.',
        price: 799,
        period: 'eenmalig',
        items: [
          { 
            description: 'Installeren van plugins',
          }, 
          {
            description: 'Schrijven van SEO-teksten',
          },
          {
            description: 'Optimaliseren van bestaande pagina`s',
          },
          {
            description: 'Hulp bij inrichten Google Mijn Bedrijf',
          },
          {
            description: "Linkbuilding opzetten",
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Interesse',
          href: '/contact',
        },
      },
      {
        title: 'Monitoring & Optimalisatie',
        subtitle: 'Om up-to-date te blijven, raden wij aan om maandelijks je website bij te houden en te optimaliseren',
        price: 149,
        period: 'per maand',
        items: [
          {
            description: 'SEO-proof maken van nieuwe artikelen',
          },
          {
            description: 'Technische fouten oplossen',
          },
          {
            description: 'Monitoren van nieuwe kansen',
          },
          {
            description: 'Maandelijkse rapportages',
          }
        ],
        callToAction: {
          text: 'Interesse',
          href: '/contact',
        },
      }
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Jouw website beter vindbaar in deze 6 stappen "
    tagline="ons proces"
